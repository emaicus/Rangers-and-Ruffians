{
	"description": "Definition of a single spell.",
	"type": "object",
	"additionalProperties": false,
	"required": ["type", "cost", "range", "duration", "description", "requirements"],
	"properties": {
		"name": {
			"type": "string"
		},
		"type": {
			"type": "string",
			"enum": ["damage", "aoe damage", "multi-attack damage", "healing", "aoe healing", "debuff", "aoe debuff", "buff", "aoe buff", "utility", "summoning", "transformation"]
		},	
		"cost": {
			"type": "integer",
			"minimum": 0,
			"maximum": 3
		},
		"duration": {
				"anyOf": [
				{
					"type": "integer",
					"minimum": 1
				}, 
				{
					"type": "string",
					"enum": ["concentration", "save", "instantaneous", "1 hour", "12 hours", "1 day", "infinite"]
				}
			]
		},
		"casting_time": {
			"type": "string",
			"minLength": 5
		},
		"range": {
			"anyOf": [
				{
					"type": "integer",
					"minimum": 10
				}, 
				{
					"type": "string",
					"enum": ["self", "touch", "infinite", "1 mile"]
				}
			]
		},
		"radius": {
				"anyOf": [
						{
								"type": "integer",
								"minimum": 10
						},
						{
								"type": "string",
								"enum": ["1 mile", "infinite"]
						}
				]
		},
		"description": {
			"type": "string",
			"minLength": 20
		},
		"requirements": {
				"type": "object",
				"additionalProperties": false,
				"required": ["movement", "verbal"],
				"properties": {
						"movement": {
								"type": "boolean"
						},
						"verbal": {
								"type": "boolean"
						},
						"components" : {
								"type": "array",
								"items": {
									"type": "string"
								}
						}
				}
		},
		"damage_scaling": {
			"type": "object",
			"required": ["damage_type", "tier_3"],
			"additionalProperties": false,
			"properties": {
				"multi_attack" : {
					"type": "integer"
				},
				"damage_type" : {
					"type": "string",
					"enum":  ["healing", "psychic", "fire", "cold", "lightning", "elemental", "arcane", "radiant", "necrotic", "blunt", "piercing", "acoustic", "poison"]
				},
				"scaled_by": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"weapon": {
							"type": "boolean"
						}
					}
				},
				"damage_shape": {
					"type": "string",
					"enum": ["cone", "line", "chain"]
				},
				"tier_1": {
					"type": "string"
				},
				"tier_2": {
					"type": "string"
				},
				"tier_3": {
					"type": "string"
				}
			}
		},
		"upcast": {
			"type": "string"
		},
		"summoned_creature": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
					"tier_1": {
						"type": "string"
					},
					"tier_2": {
						"type": "string"
					},
					"tier_3": {
						"type": "string"
					},
					"all_tiers": {
						"type": "string"
					}
			}
		},
		"action_type": {
			"type": "string",
			"enum": ["Action", "Reaction", "Free Action"]
		},
		"effect": {
			"type": "object",
			"additionalProperties": false,
			"required": ["description", "type", "conditions", "save"],
			"properties": {
				"description": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": ["buff", "debuff", "damage"]
				},
				"options": {
					"type": "array",
					"items": {
									"type": "string"
					}
				},
				"conditions": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": ["custom", "blinded", "bleeding", "blocked", "burning", "charmed", "controlled", "diminished", "distracted",
						"deafened", "dumbstruck", "elemental resistance", "empowered", "enlarged", "entangled", "ethereal",
						"estranged", "fearless", "fixated", "frenzied", "frightened",
						"frozen", "grappled", "halted", "hastened", "harried", "hindered", "hoisted", "infused", "immune", "invisible",
						"incapacitated", "invincible",
						"isolated", "leeched", "lured", "lycanthropy", "muted", "nimble", "physical resistance", 
						"quickened", "rot", "shrunk", "transformed", "truesight",
						"staggered", "poisoned", 
						"prone", "slowed", "stunned", "weakened", "vulnerable"]
					}
				},
				"save" : {
					"anyOf": [
						{
							"type": "null"
						}, 
						{
							"type": "string"
						}
					]
				}
			}
		},
		"options": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["name", "description"],
				"additionalProperties": false,
				"properties":{
					"name":{
						"type": "string"
					},
					"description": {
						"type": "string"
					}
				}
			}
		}
	}
}