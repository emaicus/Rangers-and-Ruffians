{
	"description": "Definition of a single class.",
	"additionalProperties": false,
	"type": "array",
    "items": {
        "type": "object",
        "required": ["name", "recommended_stats", "health_schedule", "class_type"],
        "additionalProperties": false,
        "properties": {
            "name" : {
                "type": "string"
            },
            "paths": {
                "type": "object",
                "minProperties": 1,
                "additionalProperties": {
                    "type": "string"
                  }
            },
            "class_type": {
                "type": "string",
                "enum": ["Tank", "Striker", "Battle Mage", "Support"]
            },
            "health_schedule": {
                "starting_health": {
                    "type": "integer",
                    "enum": [6,8,12]
                },
                "standard_level_health_bonus": {
                    "type": "integer",
                    "enum": [2]
                },
                "tier_increase_health_bonus": {
                    "type": "integer",
                    "enum": [2,4,6]
                }
            },
            "recommended_stats": {
                "type": "object",
                "required" : ["Charisma", "Dexterity", "Inner_Fire", "Intelligence", "Perception", "Strength"],
                "additionalProperties": false,
                "properties": {
                    "Charisma": {
                        "type": "integer",
                        "minimum": -2,
                        "maximum": 3
                    },
                    "Dexterity": {
                        "type": "integer",
                        "minimum": -2,
                        "maximum": 3
                    },
                    "Inner_Fire": {
                        "type": "integer",
                        "minimum": -2,
                        "maximum": 3
                    },
                    "Intelligence": {
                        "type": "integer",
                        "minimum": -2,
                        "maximum": 3
                    },
                    "Perception": {
                        "type": "integer",
                        "minimum": -2,
                        "maximum": 3
                    },
                    "Strength": {
                        "type": "integer",
                        "minimum": -2,
                        "maximum": 3
                    }
                }
            },
            "abilities_by_level": {
                "type": "object",
                "additionalProperties": false,
              
                "patternProperties": {
                  "^level_[1-9][0-9]*$": {
                    "type": "object",
              
                    "minProperties": 1,
              
                    "properties": {
                      "standard": { "type": "array" }
                    },
              
                    "additionalProperties": { "type": "array" }
                  }
                }
              },
            "spells": {
                "type": "object",
                "required": ["Tier_1", "Tier_2", "Tier_3"],
                "additionalProperties": false,
                "properties": {
                    "Tier_1": {
                        "type": "array"
                    },
                    "Tier_2": {
                        "type": "array"
                    },
                    "Tier_3": {
                        "type": "array"
                    }
                }
            },
            "handbook": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": ["title", "display_title", "text"],
                    "additionalProperties": false,
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "display_title": {
                            "type": "boolean"
                        },
                        "text": {
                            "type": "string"
                        }
                    }
                }
            },
            "rule_sections" : {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "starting_items": {
                "type": "array"
            }
        }
    }
}
