{
	"description": "Definition of a single class.",
	"additionalProperties": false,
	"type": "object",
	"required": ["recommended_stats", "health_dice", "abilities", "expertise"],
	"properties": {
        "expertise": {
            "type": "string"
        },
		"recommended_stats": {
            "type": "object",
            "required" : ["Charisma", "Dexterity", "Inner_Fire", "Intelligence", "Perception", "Strength"],
            "additionalProperties": false,
            "properties": {
                "Charisma": {
                    "type": "integer",
                    "minimum": -2,
                    "maximum": 2
                },
                "Dexterity": {
                    "type": "integer",
                    "minimum": -2,
                    "maximum": 2
                },
                "Inner_Fire": {
                    "type": "integer",
                    "minimum": -2,
                    "maximum": 2
                },
                "Intelligence": {
                    "type": "integer",
                    "minimum": -2,
                    "maximum": 2
                },
                "Perception": {
                    "type": "integer",
                    "minimum": -2,
                    "maximum": 2
                },
                "Strength": {
                    "type": "integer",
                    "minimum": -2,
                    "maximum": 2
                }
            }
        },
        "health_dice": {
				"type": "string",
				"enum": ["1d6", "1d8", "1d10"]
		},
		"abilities": {
			"type": "array",
			"items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "cost", "range", "duration", "description"],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "cost": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 3
                    },
                    "casting_time": {
                        "type": "string",
                        "minLength": 5
                    },
                    "duration": {
                            "anyOf": [
                            {
                                "type": "integer",
                                "minimum": 1
                            }, 
                            {
                                "type": "string",
                                "enum": ["concentration", "save", "instantaneous"]
                            }
                        ]
                    },
                    "damage_scaling": {
                        "type": "object",
                        "required": ["tier_1", "tier_2", "tier_3"],
                        "additionalProperties": false,
                        "properties": {
                            "tier_1": {
                                "type": "string"
                            },
                            "tier_2": {
                                "type": "string"
                            },
                            "tier_3": {
                                "type": "string"
                            }
                        }
                    },
                    "range": {
                        "type": "integer",
                        "minimum": 5
                    },
                    "radius": {
                        "type": "integer",
                        "minimum": 15
                    },
                    "description": {
                        "type": "string",
                        "minLength": 20
                    },
                    "upcast": {
                        "type": "string"
                    },
                    "summoned_creature": {
                        "type": "string"
                    },
                    "action_type": {
                        "type": "string",
                        "enum": ["Action", "Reaction", "Free Action"]
                    },
                    "effect": {
                        "type": "object",
                        "required": ["description", "type", "condition"],
                        "properties": {
                            "description": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": ["buff", "debuff", "damage"]
                            },
                            "condition": {
                                "type": "string",
                                "enum": ["blinded", "bleeding", "blocked", "burning", "charmed", "controlled", "distracted", "deafened", "enlarged", "entangled", "estranged", "fixated", "frightened", "frozen", "grappled", "hastened", "harried", "invisible", "incapacitated", "nimble", "shrunk", "transformed", "staggered", "poisoned", "prone", "slowed", "stunned", "weakened", "vulnerable"]
                            }
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["name", "description"],
                            "additionalProperties": false,
                            "properties":{
                                "name":{
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
			}
		},
        "handbook": {
			"type": "object",
			"additionalProperties": true
		}
	}
}
